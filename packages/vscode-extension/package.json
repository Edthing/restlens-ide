{
  "name": "restlens-client",
  "displayName": "REST Lens Client",
  "description": "Real-time OpenAPI specification evaluation powered by REST Lens",
  "version": "1.0.2",
  "publisher": "restlens",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Edthing/restlens-ide"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "openapi",
    "swagger",
    "api",
    "rest",
    "linter",
    "validation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "restlens.signIn",
        "title": "REST Lens: Sign In"
      },
      {
        "command": "restlens.signOut",
        "title": "REST Lens: Sign Out"
      },
      {
        "command": "restlens.selectProject",
        "title": "REST Lens: Select Project"
      },
      {
        "command": "restlens.evaluate",
        "title": "REST Lens: Evaluate Specification"
      },
      {
        "command": "restlens.clearCache",
        "title": "REST Lens: Clear Cache"
      }
    ],
    "configuration": {
      "title": "REST Lens",
      "properties": {
        "restlens.organization": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "REST Lens organization slug"
        },
        "restlens.project": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "REST Lens project name"
        },
        "restlens.apiUrl": {
          "type": "string",
          "default": "https://restlens.com",
          "description": "REST Lens API URL (fallback if not stored with auth)"
        },
        "restlens.evaluateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Evaluate OpenAPI specs when saving"
        },
        "restlens.evaluateOnType": {
          "type": "boolean",
          "default": false,
          "description": "Evaluate OpenAPI specs while typing (with debounce)"
        },
        "restlens.debounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce delay in milliseconds for evaluate-on-type"
        },
        "restlens.includeInfoSeverity": {
          "type": "boolean",
          "default": false,
          "description": "Include info-level violations in diagnostics"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:server",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:server": "esbuild ../lsp-server/src/server.ts --bundle --outfile=dist/server/server.js --format=cjs --platform=node",
    "watch": "npm run build:extension -- --watch",
    "package": "vsce package",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@restlens-ide/shared": "*",
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0"
  }
}
